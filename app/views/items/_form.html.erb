<h3>Add an Activity</h4>
<%= form_for [user, item] do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Add your new item" %>
  </div>
    <%= f.submit "Submit Item", class: 'btn btn-default pull-right' %>
<% end %>
